-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings.include?(rating)
  = submit_tag 'Refresh'
  
%table#movies
  %thead
    %tr
      %th{ class: params[:movie_title]}= link_to 'Movie title', movies_path(movie_title: 'hilite', release_date: 'nohilite', ratings: params[:ratings])
      %th Rating
      %th{ class: params[:release_date]}= link_to 'Release Date', movies_path(movie_title: 'nohilite',release_date: 'hilite', ratings: params[:ratings])
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
